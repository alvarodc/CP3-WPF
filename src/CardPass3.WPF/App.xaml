<Application x:Class="CardPass3.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:rv="clr-namespace:CardPass3.WPF.Modules.Readers.Views"
             xmlns:rvm="clr-namespace:CardPass3.WPF.Modules.Readers.ViewModels"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Shared/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Shared/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ViewModel â†’ View mapping para el ContentControl del Shell -->
            <DataTemplate DataType="{x:Type rvm:ReadersViewModel}">
                <rv:ReadersView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
