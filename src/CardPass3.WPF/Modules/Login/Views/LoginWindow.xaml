<Window x:Class="CardPass3.WPF.Modules.Login.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:CardPass3.WPF.Core.Converters"
        Title="CardPass3"
        Width="420" Height="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent">

    <Window.Resources>
        <conv:BoolToVisibilityConverter          x:Key="BoolToVis"/>
        <conv:InverseBoolToVisibilityConverter   x:Key="InvBoolToVis"/>
    </Window.Resources>

    <!-- Drop shadow wrapper -->
    <Border Margin="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="4" Direction="270"
                              Color="#000000" Opacity="0.28"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="7"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top accent stripe -->
            <Border Grid.Row="0" CornerRadius="6,6,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1565C0" Offset="0"/>
                        <GradientStop Color="#2196F3" Offset="0.5"/>
                        <GradientStop Color="#42A5F5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- Main card -->
            <Border Grid.Row="1"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="0,0,6,6">

                <Border MouseLeftButtonDown="Window_MouseLeftButtonDown">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- HEADER -->
                        <StackPanel Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    Margin="0,44,0,36">

                            <Viewbox Width="52" Height="52" HorizontalAlignment="Center">
                                <Canvas Width="52" Height="52">
                                    <Path Fill="#1565C0"
                                          Data="M26,2 L46,10 L46,28 C46,40 36,48 26,52 C16,48 6,40 6,28 L6,10 Z"/>
                                    <Path Fill="#2196F3" Opacity="0.4"
                                          Data="M26,7 L42,14 L42,28 C42,38 34,44 26,47 C18,44 10,38 10,28 L10,14 Z"/>
                                    <Rectangle Fill="White" Width="14" Height="11"
                                               Canvas.Left="19" Canvas.Top="28" RadiusX="2" RadiusY="2"/>
                                    <Path Stroke="White" StrokeThickness="2.5" Fill="Transparent"
                                          Data="M21,28 L21,24 C21,20.7 31,20.7 31,24 L31,28"/>
                                    <Ellipse Fill="#1565C0" Width="3" Height="3"
                                             Canvas.Left="24.5" Canvas.Top="31.5"/>
                                </Canvas>
                            </Viewbox>

                            <TextBlock HorizontalAlignment="Center"
                                       Margin="0,14,0,0">
                                <Run Text="CardPass" FontFamily="Segoe UI" FontWeight="Light"
                                     FontSize="30" Foreground="#1A2E4A"/>
                                <Run Text="3" FontFamily="Segoe UI" FontWeight="Bold"
                                     FontSize="30" Foreground="#2196F3"/>
                            </TextBlock>

                            <TextBlock Text="v4.0.0"
                                       FontFamily="Segoe UI"
                                       FontSize="11"
                                       Foreground="#9E9E9E"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- FORM -->
                        <StackPanel Grid.Row="1" Margin="44,0,44,0">

                            <TextBlock Text="OPERADOR"
                                       Style="{StaticResource T.Label}"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="TxtOperator"
                                     Style="{StaticResource Input.Text}"
                                     Text="{Binding OperatorName, UpdateSourceTrigger=PropertyChanged}"
                                     KeyDown="Input_KeyDown"/>

                            <TextBlock Text="CONTRASEÑA"
                                       Style="{StaticResource T.Label}"
                                       Margin="0,18,0,6"/>
                            <PasswordBox x:Name="TxtPassword"
                                         Style="{StaticResource Input.Password}"
                                         KeyDown="Input_KeyDown"/>

                            <!-- Error message -->
                            <Border Background="#FFF3E0"
                                    CornerRadius="4"
                                    Padding="10,8"
                                    Margin="0,12,0,0"
                                    Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="{Binding ErrorMessage}"
                                           FontFamily="Segoe UI"
                                           FontSize="12"
                                           Foreground="#E65100"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- Login button — Content set ONCE via child element only -->
                            <Button Style="{StaticResource Btn.Primary}"
                                    Height="40"
                                    Margin="0,20,0,0"
                                    Command="{Binding LoginCommand}"
                                    CommandParameter="{Binding ElementName=TxtPassword, Path=Password}">
                                <Grid>
                                    <TextBlock Text="INICIAR SESIÓN"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsLoggingIn, Converter={StaticResource InvBoolToVis}}"/>
                                    <TextBlock Text="Verificando…"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsLoggingIn, Converter={StaticResource BoolToVis}}"/>
                                </Grid>
                            </Button>

                        </StackPanel>

                        <!-- FOOTER -->
                        <Border Grid.Row="2"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,1,0,0"
                                Margin="0,24,0,0"
                                Padding="44,12">
                            <TextBlock FontFamily="Segoe UI"
                                       FontSize="11"
                                       Foreground="#BDBDBD"
                                       HorizontalAlignment="Center">
                                <Run Text="© 2024 CardPass3  ·  Sistema de control de acceso"/>
                            </TextBlock>
                        </Border>

                    </Grid>
                </Border>
            </Border>
        </Grid>
    </Border>
</Window>
